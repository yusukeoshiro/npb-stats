<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Team1</th>
      <th>Team2</th>
      <th>Result</th>
      <th>Team1 score</th>
      <th>Team2 score</th>
      <th>Date</th>
      <th>Stadium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team1 %></td>
        <td><%= game.team2 %></td>
        <td><%= game.result %></td>
        <td><%= game.team1_score %></td>
        <td><%= game.team2_score %></td>
        <td><%= game.date %></td>
        <td><%= game.stadium %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

